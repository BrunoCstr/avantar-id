rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regras para dados de usuário individual
    match /users/{userId} {
      // Usuários podem ler/escrever seus próprios dados
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Administradores podem ler/escrever dados de todos os usuários
      allow read, write: if request.auth != null && 
                     exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                     get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin";
    }
    
    // Regras para dados compartilhados de seguradoras
    match /global-companies/{document} {
      // Todos os usuários autenticados podem ler
      allow read: if request.auth != null;
      
      // Apenas administradores podem escrever
      allow write: if request.auth != null && 
                      exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin";
    }

    // Regras para a coleção companies (usada no dashboard)
    match /companies/{document} {
      // Todos os usuários autenticados podem ler
      allow read: if request.auth != null;

      // Função auxiliar para verificar se é admin
      function isAdmin() {
        return request.auth != null &&
               exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
               get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin";
      }

      // Criar: Admins podem criar qualquer seguradora, usuários podem criar apenas suas próprias
      // (onde ownerId == request.auth.uid)
      allow create: if request.auth != null && 
                        (isAdmin() || 
                         (request.resource.data.ownerId == request.auth.uid));

      // Atualizar: Admins podem atualizar qualquer seguradora, usuários apenas suas próprias
      allow update: if request.auth != null && 
                        (isAdmin() || 
                         (resource.data.ownerId == request.auth.uid));

      // Deletar: Admins podem deletar qualquer seguradora, usuários apenas suas próprias
      allow delete: if request.auth != null && 
                        (isAdmin() || 
                         (resource.data.ownerId == request.auth.uid));
    }
    
    // Manter compatibilidade com dados antigos (caso existam)
    match /user-companies/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null && 
                     exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                     get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin";
    }
    
    // Regras para logs de acesso
    match /access-logs/{logId} {
      // Qualquer usuário autenticado pode criar logs
      allow create: if request.auth != null;
      
      // Apenas administradores podem ler logs
      allow read: if request.auth != null && 
                     exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                     get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin";
      
      // Ninguém pode atualizar ou deletar logs (imutáveis para auditoria)
      allow update, delete: if false;
    }
  }
} 